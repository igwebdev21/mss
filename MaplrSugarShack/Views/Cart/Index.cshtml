@model MaplrSugarSnack.Services.ICartItemRepository

<h4>@ViewBag.Title</h4>
<hr />
<div>
    <a asp-action="Index" asp-controller="Products">Back to Products</a>
</div>
<div>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Count</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.GetAll())
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price</td>
                    <td>@item.Count</td>
                    <td>
                        <a asp-action="Add" asp-route-productId="@item.ProductId">
                            <i class="fa fa-plus"></i>
                        </a>
                        <a asp-action="Remove" asp-route-productId="@item.ProductId">
                            <i class="fa fa-minus"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <span style="font-weight: bold">Total: @Model.GetTotal().ToString("c")</span>
</div>
<div>
    @if (Model.GetCount() > 0)
    {
        <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">
            Checkout
        </a>
    }
    else
    {
        <a class="btn btn-primary disabled" style="pointer-events: none;">
            Checkout
        </a>
    }

</div>
