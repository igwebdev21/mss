@model List<MaplrSugarSnack.Models.Product>

<div>
    <h4>@ViewBag.Title</h4>
    <table class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ProductType)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Description)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Price)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td>@product.Name</td>
            <td>@product.ProductType.Name</td>
            <td>@product.Description</td>
            <td>@product.Price.ToString("c")</td>
            <td>
                <a asp-action="Details" asp-route-id="@product.Id"><i class="fas fa-search-plus"></i></a>
                <a asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id"><i class="fas fa-shopping-cart"></i></a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
